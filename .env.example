# Application Configuration
APP_NAME=AI JSON Prompt Generator API
VERSION=1.0.0
DEBUG=true
HOST=127.0.0.1
PORT=8000
ENVIRONMENT=development

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8080"]

# Database Configuration
DATABASE_URL=sqlite:///./prompts.db

# LLM Provider API Keys (add your actual keys here)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Development Settings
LOG_LEVEL=debug
